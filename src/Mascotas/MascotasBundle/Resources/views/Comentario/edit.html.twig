{% extends '::base.html.twig' %}
{% block title %}Editar Comentario{% endblock %}
{% block body -%}
<div class="container text-center">
    <form action="{{ path('comentario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-inverse">Editar</button>
        </p>
    </form>
        <form action="{{ path('comentario_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-bg">borrar</button>
        </form>
</div>
<div class="text-center"><a href="{{ path('panel_index') }}">Volver</a></div>
{% endblock %}
