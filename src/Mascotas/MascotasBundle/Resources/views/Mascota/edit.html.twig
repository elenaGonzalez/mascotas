{% extends '::base.html.twig' %}

{% block body -%}
<div class="text-center">
    <h1>Editar datos de la Mascota </h1>

    <form action="{{ path('mascota_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
         <td class="text-center"><img src="{{ asset(entity.foto.webpath) }}" alt="Zelda!" width="100" height="100">Foto Actual</td>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-inverse">Editar</button>
        </p>
    </form>
        <form action="{{ path('mascota_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Borrar</button>
        </form>
     <a href="{{ path('panel_index') }}">
           Volver 
        </a>
</div>
{% endblock %}
