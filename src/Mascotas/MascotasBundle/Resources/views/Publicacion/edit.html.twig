{% extends '::base.html.twig' %}

{% block body -%}
<div class="text-center">
    <h1>Editar Publicaci√≥n</h1>
    <form action="{{ path('publicacion_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <td class="text-center"><img src="{{ asset(entity.foto.webpath) }}" alt="Zelda!" width="100" height="100">Foto Actual</td>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
            <button type="submit" class="btn-warning">Editar</button>
    </form>
    {% if is_granted('ROLE_ADMIN') %}
    <form action="{{ path('publicacion_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn-danger">Borrar</button>
        </form>
    {% endif %}
        <ul class="record_actions">
    <li>
        <a href="{{ path('panel_index') }}">
           Atras
        </a>
    </li>
</ul>
</div>
{% endblock %}
