{% extends '::base.html.twig' %}

{% block body %}
<div class="text-center" style="margin: auto">
    <h3>Publicaciones</h3>
    <br>Estas son las Ultimas Publicaciones</br>
    <br>Ayudanos a encotrar a estas mascotas con sus duenos</br>
    <table class="records_list table-striped span12">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Usuario</th>
                <th class="text-center">Tipo</th>
                <th class="text-center">Fecha de publicacion</th>
                <th class="text-center">Aviso</th>
                <th class="text-center">Foto</th>
                <th class="text-center">Contacto</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr style="central">
                <td class="text-center"><a href="{{ path('publicacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="text-center">{{ entity.usuario }}</td>
                <td class="text-center">{{ entity.tipo }}</td>
                <td class="text-center">{% if entity.fechapublicacion %}{{ entity.fechapublicacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td class="text-center">{{ entity.aviso }}</td>
                <td class="text-center">{{ entity.foto }}</td>
                <td class="text-center">{{ entity.contacto }}</td>
                <td class="text-center">
                <ul>
                     {% if is_granted('ROLE_ADMIN') %}
                    <li class="text-center">
                        <a href="{{ path('publicacion_show', { 'id': entity.id }) }}">ver</a>
                    </li>
                    <li class="text-center">
                        <a href="{{ path('publicacion_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                 {% endif%}
                    <li class="text-center">
                         <a href="{{ path('comentarioNew', { 'id': entity.id }) }}">comentar</a>
                    </li>
                 </ul>
                </td>
            </tr>
        {% endfor %}
      </tbody>
    </table>

        <ul>
        <li>
           
        </li>
    </ul>
</div>
    {% endblock %}
