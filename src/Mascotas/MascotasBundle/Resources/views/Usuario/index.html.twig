
{% block body -%}
    <h1>Lista de Usuarios</h1>

    <table class="table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Usuario</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.usuario }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
